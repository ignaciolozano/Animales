<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@mipmap/fondogranja">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerdo"
        android:id="@+id/buttonCerdo"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"
        android:onClick="lanzarCerdo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pollo"
        android:id="@+id/button2"
        android:layout_below="@+id/buttonCerdo"
        android:layout_alignLeft="@+id/buttonCerdo"
        android:layout_alignStart="@+id/buttonCerdo"
        android:onClick="lanzarPollo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaca"
        android:id="@+id/buttonVaca"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="lanzarVaca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animales"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:textColor="#ffff6c37"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFoto"
        android:layout_below="@+id/buttonVaca"
        android:text="Foto"
        android:background="@mipmap/ic_action_photo"
        android:layout_alignRight="@+id/buttonVaca"
        android:layout_alignEnd="@+id/buttonVaca" />

</RelativeLayout>
